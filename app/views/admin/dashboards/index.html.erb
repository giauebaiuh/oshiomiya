<%= flash[:notice] %>
<h1>ユーザー一覧</h1>
<% @users.each do |user| %>
  <table class="table table-striped table-border-1 w-50">
    <thead>
      <tr>
        <th>ユーザーネーム</th>
        <th>メールアドレス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(user.id) do %>
            <%= user.name %>
          <%end%>
        </td>
        <td><%= user.email %></td>
        <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？'}, class: "btn btn-danger" %></td>
      </tr>
    </tbody>
  </table>
 <%end%>
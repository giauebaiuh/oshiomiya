<div class="container">
  <div class="row">
    <h1>プロフィール編集</h1>
  </div>
  <div class="row">
    <%= image_tag @user.get_profile_image(100,100),class: "rounded-circle" %>
  </div>
  <div class="row">
    <%= form_with model: @user do |f| %>
      <label class="mt-2 mb-0">プロフィール画像</label></br>
      <%= f.file_field :profile_image, accept: "image/*" %></br>
      <label class="mt-3 mb-0">名前</label></br>
      <%= f.text_field :name %></br>
      <label class="mt-3 mb-0">ユーザーコメント</label></br>
      <%= f.text_area :user_comment %></br>
      <%= f.submit "編集" %>
    <%end%>
  </div>
</div>